---
import Navbar from '../components/navbar/Navbar.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout title="Starbucks">
  <main>
    <div class="h-screen bg-secondary">
      <Navbar />
      <section class="h-[82%]">
        <div class="bg-primmary text-white font-bold text-lg py-3 px-36">
          STARBUCKS REWARDS
        </div>
        <div class="flex items-center justify-between h-full">
          <div class="flex items-start flex-col pl-16 space-y-5">
            <span class="text-balance text-5xl font-semibold"
              >FREE COFFEE <br /> IS A TAP AWAY</span
            >
            <span class="text-xl">Join now to start earning Rewards.</span>

            <button
              class="bg-tertiary text-white text-xl px-4 py-1 rounded-3xl font-medium"
            >
              Join now
            </button>
            <span class="text-xl">
              Or <a href="" class="underline">join in the app</a> for the best experience
            </span>
          </div>
          <img
            src="estrella.png"
            class="h-full w-2/4 max-h-full object-cover"
            alt=""
          />
        </div>
      </section>
    </div>
  </main>
</Layout>
