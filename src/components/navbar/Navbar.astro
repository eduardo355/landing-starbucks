---
import MapsIcon from '../icons/MapsIcon.astro'
import StarbucksIcon from '../icons/StarbucksIcon.astro'
---

<nav class="flex w-full justify-between px-8 py-6 bg-white">
  <div class="flex items-center space-x-7">
    <StarbucksIcon />
    <span class="text-base font-bold">MENU</span>
    <span class="text-base font-bold">REWARDS</span>
    <span class="text-base font-bold">GIFT CARDS</span>
  </div>
  <div class="flex items-center space-x-6">
    <div class="flex items-center space-x-3">
      <MapsIcon />
      <span class="text-base font-bold">Find a store</span>
    </div>
    <button class="border border-black px-4 py-1 rounded-3xl font-medium"
      >Sign in</button
    >
    <button class="bg-black text-white px-4 py-1 rounded-3xl font-medium"
      >Join now</button
    >
  </div>
</nav>
